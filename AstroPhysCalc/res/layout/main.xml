<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="10dp"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mass" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    
	    <EditText
	        android:id="@+id/mass"
	        android:layout_width="@dimen/textBox"
	        android:layout_height="wrap_content"
	        android:inputType="numberDecimal"/>
	    
	    <Spinner
	        android:id="@+id/massUnits"
	        android:layout_width="@dimen/spinner"
	        android:layout_height="wrap_content"
	        android:entries="@array/massUnits"
	        />
	    
	    <Button
	        android:id="@+id/massBtn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:text="Calculate"
	        />	    
	</LinearLayout>    

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Radius" />    
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    
	    <EditText
	        android:id="@+id/radius"
	        android:layout_width="@dimen/textBox"
	        android:layout_height="wrap_content"
	        android:inputType="numberDecimal"/>
	    
	    <Spinner
	        android:id="@+id/radiusUnits"
	        android:layout_width="@dimen/spinner"
	        android:layout_height="wrap_content"
	        android:entries="@array/lengthUnits"
	        />	    
	    
	    <Button
	        android:id="@+id/radiusBtn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:text="Calculate"
	        />
	    
	</LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Period" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">    
    
	    <EditText
	        android:id="@+id/period"
	        android:layout_width="@dimen/textBox"
	        android:layout_height="wrap_content"
	        android:inputType="numberDecimal"/>
	    
	    <Spinner
	        android:id="@+id/periodUnits"
	        android:layout_width="@dimen/spinner"
	        android:layout_height="wrap_content"
	        android:entries="@array/timeUnits"
	        />
	    
	    <Button
        	android:id="@+id/periodBtn"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="5dp"
        	android:text="Calculate"
        	/>

    </LinearLayout>    
</LinearLayout>